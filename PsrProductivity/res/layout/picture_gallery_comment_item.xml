<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <TextView
        android:id="@+id/picture_gallery_comment_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/selected_caption"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/picture_gallery_comment_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/picture_gallery_comment_item_author"
        android:layout_alignRight="@+id/rating"
        android:layout_below="@+id/rating"
        android:text="fsfasfsafdsd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <RatingBar
        android:id="@+id/rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/picture_gallery_comment_item_author"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:visibility="visible" />

    <TextView
        android:id="@+id/picture_gallery_comment_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/picture_gallery_comment_item_text"
        android:layout_alignTop="@+id/rating"
        android:layout_marginLeft="48dp"
        android:paddingLeft="15dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/selected_caption"
        android:textSize="10sp" />
    
</RelativeLayout>
