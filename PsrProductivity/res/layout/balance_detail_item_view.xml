<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/light_grey"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/balance_doc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingBottom="0dp"
        android:paddingLeft="15dp"
        android:paddingTop="0dp"
        android:text="какой-то документ"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/balance_type_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingLeft="15dp"
            android:text="тип кредита"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/balance_type"
            android:layout_width="fill_parent"
            android:layout_height="25dip"
            android:gravity="bottom"
            android:paddingLeft="15dp"
            android:text="Нал/по факту"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/balance_term_label"
                android:layout_width="120dp"
                android:layout_height="25dip"
                android:gravity="top"
                android:text="срок"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/balance_shipped_label"
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:gravity="top"
                android:text="отгрузка"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/balance_term"
                android:layout_width="80dip"
                android:layout_height="25dip"
                android:gravity="bottom"
                android:text="01.01"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/balance_shipped"
                android:layout_width="80dip"
                android:layout_height="25dip"
                android:gravity="bottom"
                android:text="01.01"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/balance_debt_label"
                android:layout_width="80dip"
                android:layout_height="25dip"
                android:gravity="top"
                android:text="долг"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/balance_sum_label"
                android:layout_width="80dip"
                android:layout_height="25dip"
                android:gravity="top"
                android:text="сумма"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/balance_debt"
                android:layout_width="80dip"
                android:layout_height="25dip"
                android:gravity="bottom"
                android:text="@string/amount"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/balance_sum"
                android:layout_width="80dip"
                android:layout_height="25dip"
                android:gravity="bottom"
                android:text="@string/amount"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>