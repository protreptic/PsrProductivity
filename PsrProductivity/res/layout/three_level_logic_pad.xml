<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="1dip" >

 	<ImageButton
 	    android:id="@+id/button_yes"
 	    android:layout_width="99dip"
 	    android:layout_height="99dip"
 	    android:layout_alignParentLeft="true"
 	    android:src="@drawable/rating_good" />

    <ImageButton
        android:id="@+id/button_no"
        android:layout_width="99dip"
        android:layout_height="99dip"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/button_yes"
        android:src="@drawable/rating_bad" />

    <Button
        android:id="@+id/button_na"
        android:layout_width="99dip"
        android:layout_height="99dip"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/button_no"
        android:text="Н/Д"
        android:textSize="36sp" />

    <ImageButton
        android:id="@+id/button_erase"
        android:layout_width="99dip"
        android:layout_height="99dip"
        android:layout_toRightOf="@+id/button_na"
        android:contentDescription="@string/gen_erase"
        android:src="@drawable/content_discard" 
        android:layout_marginLeft="10dip"
    />
    

</RelativeLayout>