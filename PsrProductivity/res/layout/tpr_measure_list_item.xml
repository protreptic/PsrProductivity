<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/tpr_measure_list_item_photo"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/Empty"
        android:scaleType="center"
        android:src="@drawable/device_access_camera" />

    <TextView
        android:id="@+id/tpr_measure_list_item_product_descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tpr_measure_list_item_photo"
        android:layout_alignTop="@+id/tpr_measure_list_item_photo"
        android:layout_toLeftOf="@+id/checkBox2"
        android:layout_toRightOf="@+id/tpr_measure_list_item_photo"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tpr_measure_list_item_csku_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tpr_measure_list_item_photo"
        android:layout_toRightOf="@+id/tpr_measure_list_item_photo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/tpr_measure_list_item_product_descr"
        android:layout_alignLeft="@+id/checkBox1"
        android:layout_alignParentRight="true"
        android:text="Ценник размещен" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tpr_measure_list_item_product_descr"
        android:text="Цена снижена" />

    <TextView
        android:id="@+id/tpr_measure_list_item_photo_count"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tpr_measure_list_item_photo"
        android:layout_alignLeft="@+id/tpr_measure_list_item_photo"
        android:layout_alignRight="@+id/tpr_measure_list_item_photo"
        android:gravity="center_horizontal"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
