<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/marketing_measure_has_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/device_access_camera"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/marketing_measure_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/marketing_measure_has_photo"
        android:layout_alignTop="@+id/marketing_measure_has_photo"
        android:layout_toLeftOf="@+id/marketing_measure_result"
        android:layout_toRightOf="@+id/marketing_measure_has_photo"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/selected_caption1"
        android:typeface="serif" />

    <TextView
        android:id="@+id/marketing_measure_result"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/marketing_measure_text"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/marketing_measure_text"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/marketing_measure_picture_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/marketing_measure_has_photo"
        android:layout_toLeftOf="@+id/marketing_measure_text"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/selected_caption"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/marketing_measure_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/marketing_measure_text"
        android:layout_alignRight="@+id/marketing_measure_text"
        android:layout_below="@+id/marketing_measure_text"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/selected_caption"
        android:textSize="12sp" />

</RelativeLayout>
