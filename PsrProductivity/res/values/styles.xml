<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Controls">v</style>

    <style name="ListFirstLineStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="ListSecondLineStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="EditableTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#646464</item>
        <item name="android:shadowColor">#bebebe</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AlertDialogCustom">
        <item name="android:background">#bebebe</item> <!-- MUST HAVE with white bg -->
        <item name="android:windowBackground">@null</item>
        <!-- <item name="android:windowBackground">@color/transparent</item> needed with white bg ? -->
        <item name="android:windowFrame">@null</item> <!-- not sure what this changes -->
        <item name="android:textColor">#646464</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- <item name="android:windowTitleStyle">@style/setwindowTitleStyle</item> -->
        <!-- <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item> -->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <!-- <item name="android:colorBackgroundCacheHint">@android:color/white</item> -->
    </style>

    <style name="SplashScreen">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Widget" />

    <style name="Theme.Holo.Sfs" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:tabWidgetStyle">@style/SfsHoloTabWidget</item>
        <item name="android:fastScrollThumbDrawable">@drawable/scroller_style</item>
    </style>

    <style name="SfsHoloTabWidget" parent="@android:style/Widget.Holo.TabWidget"></style>

    <style name="SfsHoloTabWidget.Left" parent="@android:style/Widget.Holo.TabWidget">
        <item name="android:divider">?android:attr/dividerHorizontal</item>
    </style>

    <style name="CustomActionBar" parent=""></style>

    <style name="SfsHoloTabText" parent="Widget">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">180dip</item>
        <item name="android:gravity">center</item>
    </style>

</resources>